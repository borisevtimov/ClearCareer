@using ClearCareer.Core.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section id="register">
    <div class="form">
        <h2>Register</h2>
        <form class="login-form" action="/User/Register" onsubmit="return onSubmit(event)" method="post">
            <input asp-for="@Model.Username" type="text" id="register-username" placeholder="Username" />
            <input asp-for="@Model.Email" type="text" id="register-email" placeholder="Email" />
            <input asp-for="@Model.Password" type="password" id="register-password" placeholder="Password" />
            <input asp-for="@Model.ConfirmPassword" type="password" id="register-repass" placeholder="Repeat Password" />
            <button type="submit">Register</button>
            <p class="message">Already registered? <a href="/User/Login">Login</a></p>
        </form>
    </div>
</section>

@section Scripts{
    <script src="~/js/register-validation.js"></script>
}