@using ClearCareer.Core.ViewModels
@model List<DashboardOfferViewModel>

@{
    ViewData["Title"] = "All Offers";
}

<section id="dashboard">
    <h2>Job Offers</h2>
    @if (Model.Count == 0)
    {
        <h2>No offers yet.</h2>
    }
    else
    {
        foreach (DashboardOfferViewModel offer in Model)
        {
            <div class="offer">
                <img src="/images/@offer.ImageUrl" alt="Job offer image" />
                <p>
                    <strong>Title: </strong><span class="title">@offer.Title</span>
                </p>
                <p>
                    <strong>Salary: </strong>
                    @if (offer.Salary.HasValue)
                    {
                        <span class="salary">@String.Format("{0:0.00}", offer.Salary.Value) lv.</span>
                    }
                    else
                    {
                        <span class="salary">No salary included</span>
                    }
                </p>
                <a class="details-btn" href="/Offer/@offer.Id">Details</a>
            </div>
        }
    }
</section>